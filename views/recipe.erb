<% if @categories.any?() %>
<form action='/recipies/<%= @recipe.id %>/categories' method='post'>
  <% @categories.each() do |category| %>
  <div class='checkbox'>
    <label>
      <input type='checkbox' name='category_ids[]' value'<%= category.id %>'><%= category.name %>
    </label>
  </div>
  <% end %>
  <button type='submit'>Submit A Category</button>
</form>
